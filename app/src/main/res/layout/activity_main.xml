<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="Acacia"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="Alpha Chi Rho"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/button8"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="Alpha Epsilon Pi"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/button9"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="Chi Phi"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/button10"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="Theta Xi"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/button11"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="Tau Epsilon Phi"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/button12"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="Zeta Psi"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/button13"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="Sigma Chi"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/button14"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="Pi Kappa Alpha"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/button15"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="Alpha Sigma Phi"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/button16"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="Psi Upsilon"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/button17"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="Sigma Alpha Epsilon"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/button18"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="Phi Mu Delta"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/button19"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="Pi Lamda Phi"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/button20"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="Phi Kappa Theta"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/button21"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="Delta Tau Delta"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/button22"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="Simga Phi Epsilon"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/button23"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="Pi Delta Psi"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/button24"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="Theta Chi"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/button25"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="Rensselaer Society of Engineers"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/button26"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="Phi Gamma Delta"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/button27"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="Alpha Phi Alpha"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/button28"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="Lambda Chi Alpha"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/button29"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="Phi Iota Alpha"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/button30"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="Delta Phi"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/button31"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="Delta Kappa Epsilon"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/button32"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="Phi Sigma Kappa"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/button33"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="Pi Kappa Phi"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/button34"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="Theta Xi"
                android:textAllCaps="false" />
        </LinearLayout>
    </ScrollView>

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="91dp" />

    <Button
        android:id="@+id/button2"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="All"
        android:textAllCaps="false"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchView3" />

    <Button
        android:id="@+id/button5"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Favorites"
        android:textAllCaps="false"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/searchView3" />

    <SearchView
        android:id="@+id/searchView3"
        android:layout_width="368dp"
        android:layout_height="27dp"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="192dp" />

</android.support.constraint.ConstraintLayout>